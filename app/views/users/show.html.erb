<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= image_tag "#{@user.profile_pic_url}", {class: "avatar-profile"} %>
    </div>
    <div class="col-xs-8">

      <h2><%= @user.first_name %><%= " " %><%= @user.last_name %></h2>
      <p><%= @user.email %></p>
      <p><%= @user.street1 %></p>
      <p><%= @user.postbox %></p>
      <p><%= @user.postcode %></p>
      <p><%= @user.city %></p>
      <p><%= @user.country %></p>
    </div>
  </div>

<p><%= @user.first_name %> is offering the following books</p>

<% @books.each_slice(3) do |books| %>
    <div class="row">
      <% books.each do |book| %>
        <div class="col-md-4">
          <%= link_to(physical_book_path(book), {class: "card-link"}) do %>
            <div class="card">
              <div class="col-xs-4">
                <div class="card-cover"><%= image_tag "#{book.cover_pic_url}", {class: "img-responsive" } %></div>
                </div>
              <div class="col-xs-8">
                <div class="card-category"><%=  book.status %> | <%=  book.price %> â‚¬</div>
                <div class="card-description">
                <h2><%= book.title %></h2>
                <p><%= book.author %></p>
                <% end %>
              </div>
              <a href="#"><img class="card-user avatar-sm" src="#{user.profile_pic_url(book.user_id)}"></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>



