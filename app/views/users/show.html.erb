<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= image_tag "#{@user.profile_pic_url}", {class: "img-responsive avatar-profile"} %>
    </div>
    <div class="col-xs-8">

      <h2><%= @user.first_name %><%= " " %><%= @user.last_name %></h2>
      <p><%= @user.email %></p>
      <p><%= @user.street1 %></p>
      <p><%= @user.postbox %></p>
      <p><%= @user.postcode %></p>
      <p><%= @user.city %></p>
      <p><%= @user.country %></p>
    </div>
  </div>
  <div class="row">
    <% @books.each do |book| %>
      <%= book.title %> <br>
    <% end %>
  </div>
</div>


