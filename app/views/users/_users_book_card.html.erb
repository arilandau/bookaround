<div class="flex-center-one">
  <%= link_to(user_path(@books[0].user), {class: "card-link"}) do %>
    <%= image_tag "#{@books[0].user.profile_pic_url}", class: "avatar-profile-square" %>
  <% end %>
</div>
<div class="col-xs-12 col-md-9">
  <div class="flex-center-one">
  <h2><%= @user.first_name %><%= "'s books" %></h2>
</div>


<% @books.each_slice(5) do |books| %>
  <div id ="homepagebooks" class="row">
    <% books.each do |book| %>
      <div class="col-md-4">
        <%= link_to(physical_book_path(book), {class: "card-link"}) do %>
        <div class="card">
          <div class="col-xs-4">
            <div class="card-cover">
              <%= image_tag "#{book.cover_pic_url}", {class: "img-responsive" } %>
            </div>
          </div>
          <div class="col-xs-8">
            <div class="card-category"><%=  book.status %> | â‚¬ <%= display_book_price(book) %> </div>
            <div class="card-description">
              <h2><%= book.title %></h2>
              <p><%= book.author %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
