<div class="container cont-formo">
  <div class="formo">
    <h1 class="logo-big">B</h1>
    <h3>Bookaround</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email address' %>
        <%= f.input :password, required: false, label: false, placeholder: 'Your password' %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


