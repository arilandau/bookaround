<div class="container cont-formo">
  <div class="formo">
    <h1 class="logo-big">B</h1>
    <h3>Bookaround</h3>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: :true }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email address' %>
        <%= f.input :password, required: true, label: false, placeholder: 'Create a password' %>
        <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm your password' %>
        <%= f.input :first_name, required: true, label: false, placeholder: 'First name' %>
        <%= f.input :last_name, required: true, label: false, placeholder: 'Last name'  %>
        <%= f.input :street1, required: true, label: false, placeholder: 'Street' %>
        <%= f.input :postcode, required: true, label: false, placeholder: 'ZIP code'%>
        <%= f.input :city, required: true, label: false, placeholder: 'City' %>
        <%= f.input :country, required: true, label: false, prompt: 'Country', class: "placeholder-formo" %>
        <%= f.input :bio, label: false, placeholder: "Please write some words about yourself", as: :text %>

        <%= f.label :profile_pic_url do %>
          <%= f.file_field :profile_pic_url %>
          <%= f.hidden_field :profile_pic_url_cache %>
        <% end %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign Up", class:  "btn-formo" %>
      </div>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
</div>


