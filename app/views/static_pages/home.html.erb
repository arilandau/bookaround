<!-- list of books -->
  <% @physical_books.each_slice(3) do |books| %>
    <div id ="homepagebooks" class="row">
      <% books.each do |book| %>
        <div class="col-md-4">
          <%= link_to(physical_book_path(book), {class: "card-link"}) do %>
            <div class="card">
              <div class="col-xs-4">
                <div class="card-cover"><%= image_tag "#{book.cover_pic_url}", {class: "img-responsive" } %></div>
                </div>
              <div class="col-xs-8">
                <div class="card-category"><%=  book.status %> | <%=  book.price %> â‚¬</div>
                <div class="card-description">
                <h2><%= book.title %></h2>
                <p><%= book.author %></p>
                <% end %>
              </div>

                <%= link_to(user_path(book.user), {class: "card-link"}) do %>
                <p><%= image_tag "#{book.user.profile_pic_url}", class: "avatar-sm" %></p>

                <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
