<%= render 'shared/banner' %>

<div class="container">

  <% @physical_books.each_slice(3) do |books| %>
    <div class="row">
      <% books.each do |book| %>
        <div class="col-md-4">
          <%= link_to(physical_book_path(book), {class: "card-link"}) do %>
            <div class="card">
              <div class="col-xs-4">
                <div class="card-cover"><%= image_tag "#{book.cover_pic_url}", {class: "img-responsive" } %></div>
                </div>
              <div class="col-xs-8">
                <div class="card-category"><%=  book.status %> | <%=  book.price %> â‚¬</div>
                <div class="card-description">
                <h2><%= book.title %></h2>
                <p><%= book.author %></p>
                <% end %>
                <a href="#"><img class="card-user avatar" src="#{book.user_id.profile_pic_url}"></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>


  <div id="map" style="width: 100%; height: 600px;"></div>
  <% content_for(:after_js) do %>
    <script type="text/javascript">
      $(document).on('ready', function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function(){
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    </script>
  <% end %>
</div>



