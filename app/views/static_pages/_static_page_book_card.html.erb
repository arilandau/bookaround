

<% if current_user %>
  <% @closest_10_books.each_slice(3) do |books| %>
    <div id ="homepagebooks" class="row">
      <% books.each do |book| %>
        <div class="col-md-4">
          <%= link_to(physical_book_path(book), {class: "card-link"}) do %>
          <div class="card">
            <div class="col-xs-4">
              <div class="card-cover"><%= image_tag "#{book.cover_pic_url}", {class: "img-responsive" } %>
              </div>
              <div>
                <% current_wishlist_item = current_user.contains_book?(book.id) %>
                <% if current_wishlist_item.nil? %>
                  <%= link_to wishlist_items_path(physical_book_id: book.id, wishlist_id: current_user.wishlist.id), method: "create", class: "btn btn-primary" do %>
                    <i class="fa fa-star-o fa-2x"></i>
                  <%end %>
                <% else %>
                  <%= link_to wishlist_item_path(current_wishlist_item.id), method: "delete", class: "btn btn-primary" do %>
                    <i class="fa fa-star fa-2x"></i>
                  <% end %>
                <% end %>

              </div>
            </div>
            <div class="col-xs-8">
              <div class="card-category"><%=  book.status %> | € <%= display_book_price(book) %> </div>
              <div class="card-description">
                <h2><%= book.title %></h2>
                <p><%= book.author %></p>
              </div>
              <div>
                <% if current_user %>
                  <% unless current_user.coordinates[0].nil? || book.user == current_user %>
                    <p>
                      <%= current_user.distance_from(book.user_coordinates).round(2) %> km away.
                    </p>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
          <div>
            <%= link_to(user_path(book.user), {class: "card-link"}) do %>
            <p class="card-user">
              <%= image_tag "#{book.user.profile_pic_url}", class: "avatar-sm" %>
            </p>
            <% end %>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
<!-- for visitors we just want to display last ten uploaded books -->
