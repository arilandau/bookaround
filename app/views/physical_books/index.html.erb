<% form_tag physical_books_path, method: :get do %>
<p>
<% text_field_tag :query, params[:query] %>
<% submit_tag "Search", name: nil %>
</p>
<% end %>


<div class="container">
<h2>Results</h2>
  <ul>
  <% if !@physical_books.nil? %>
    <% @physical_books.each_slice(3) do |books| %>
    <div class="row">
      <% books.each do |book| %>
        <div class="col-md-4">
          <%= link_to(physical_book_path(book), {class: "card-link"}) do %>
            <div class="card">
              <div class="col-xs-4">
                <div class="card-cover"><%= image_tag "#{book.cover_pic_url}", {class: "img-responsive" }  %></div>
                </div>
              <div class="col-xs-8">
                <div class="card-category"><%=  book.status %> | <%=  book.price %> â‚¬</div>
                <div class="card-description">
                <h2><%= book.title %></h2>
                <p><%= book.author %></p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>


